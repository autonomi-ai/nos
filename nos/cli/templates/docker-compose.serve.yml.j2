version: "3.8"

services:
{%- if http %}
  nos-http-gateway:
    image: {{ image }}
    command: nos-http-server --port {{ http_port }} --workers {{ http_workers }} {% if reload %}--reload --reload-dir {{ reload_dir }} {% endif %}
    environment:
      - NOS_HOME=/app/.nos
      - NOS_LOGGING_LEVEL={{ logging_level }}
    volumes:
      - ~/.nosd:/app/.nos
      - /dev/shm:/dev/shm
    {%- if volumes|length > 0 %}
        {%- for volume in volumes %}
      - {{ volume }}
        {%- endfor %}
      {%- endif %}
    network_mode: host
    ipc: host
    depends_on:
      - nos-server
{% endif %}
  nos-server:
    image: {{ image }}
    environment:
      - NOS_HOME=/app/.nos
      - NOS_LOGGING_LEVEL={{ logging_level }}
      {%- if config %}
      - NOS_HUB_CATALOG_PATH=$NOS_HUB_CATALOG_PATH:{{ config }}
      {%- endif %}
    volumes:
      - ~/.nosd:/app/.nos
      - /dev/shm:/dev/shm
      {%- if volumes|length > 0 %}
        {%- for volume in volumes %}
      - {{ volume }}
        {%- endfor %}
      {%- endif %}
    network_mode: host
    ipc: host
{%- if gpu %}
    deploy:
      resources:
        reservations:
          devices:
            - capabilities: [gpu]
{% endif %}
